<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.smartparkpj.mapper.ReviewMapper">

    <select id="selectLsit" resultType="com.example.smartparkpj.domain.ReviewVO">
        SELECT r.*, m.nickName from `review` r INNER JOIN `member` m ON r.mno = m.mno order by rno desc LIMIT #{skip}, #{size}
    </select>

    <select id="getCount" resultType="int">
        select count(*) from `review`
    </select>
</mapper>
